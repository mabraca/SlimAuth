 <h1>Login</h1>
    {% if message %}
        <p>{{ message }}</p>
    {% endif %}
    <form action="" method="post">
        <label>Login:</label>
        <input type="text" name="login" id="login" required>
        <br>
        <label>Password:</label>
        <input type="password" name="pass" id="pass" required>
        <br>
        <input type="submit" value="Login">
    </form>